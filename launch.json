{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {   // this is for how to debeg a module 
            "name": "Debug tests modules",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_rx_baseband",   
            "justMyCode": true,
            "console": "integratedTerminal"
        },

      {    // this is for how to debeg code with command line arguments
            "name": "Python: train TimesNet Long-Term Forecast (Learning)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"    // here is how to define env, i.e. only GPU 0 is visible.
            },
            "args": [
                "--task_name", "long_term_forecast",
                "--is_training", "1",
                "--root_path", "./dataset/ETT-small/",
            ]
        },

    ]
}
